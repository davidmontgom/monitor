[program:firewall]
environment=PYTHONPATH=/var/bootops/classes
command = /usr/bin/python /var/bootops/bootops/ufw_firewall.py
autostart=true
autorestart=true

stopsignal=KILL
stopasgroup = true
killasgroup = true

stdout_logfile=/tmp/firewall.log
stdout_logfile_maxbytes=1MB
stdout_logfile_backups=1

stderr_logfile = /tmp/firewall.err
stderr_logfile_maxbytes=1MB
stderr_logfile_backups=1

[group:firewall_server]
programs=firewall
